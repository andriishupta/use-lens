{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "useNx": true,
  "useWorkspaces": true,
  "npmClient": "yarn",
  "version": "1.0.0",
  "command": {
    "version": {
      "allowBranch": "main",
      "npmClient": "yarn",
      "message": "chore(release): publish %s"
    },
    "publish": {
      "npmClient": "yarn"
    }
  }
}
