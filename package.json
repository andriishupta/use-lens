{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "examples:start": "lerna run start --scope",
    "pregenerate-api": "cp -R ./lens-api-examples/src/graphql/*.graphql ./api/documents",
    "generate-api": "ts-node --transpileOnly ./api/lens-api-generator.ts",
    "build": "lerna run --scope '@use-lens/*' build",
    "publish:manual": "yarn run build && lerna publish --no-private",
    "version:latest": "lerna version patch --no-private",
    "version:testnet": "lerna version prepatch --preid testnet --no-private"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.12.0",
    "@graphql-codegen/typescript": "^2.7.3",
    "@graphql-codegen/typescript-operations": "^2.5.3",
    "@types/multistream": "^4.1.0",
    "@types/node": "^18.7.16",
    "axios": "^0.27.2",
    "graphql": "^16.6.0",
    "lerna": "^5.5.0",
    "multistream": "^4.1.0",
    "nx": "^14.7.3",
    "typescript": "^4.8.2"
  }
}
